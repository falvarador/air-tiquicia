@page "/destinations/add"
@page "/destinations/add/{id}"

@inject HttpClient httpClient
@inject NavigationManager navigationManager

<EditForm Model="Destination" OnValidSubmit="SubmitForm">
    <section class="title-section">
        <h3>Destino</h3>
        <button class="btn btn-sm btn-success" type="submit">
            @(string.IsNullOrEmpty(id) ? "Agregar" : "Editar")
        </button>
    </section>
    <hr />

    <DataAnnotationsValidator />
    <ValidationSummary />

    <aside class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input autocomplete="off" type="text" class="form-control" id="name" @bind="Destination.Name" />
    </aside>
    <aside class="mb-3">
        <label for="localization" class="form-label">Localizaci√≥n</label>
        <input autocomplete="off" type="text" class="form-control" id="localization" @bind="Destination.Location" />
    </aside>
</EditForm>

@code {
    [Parameter]
    public string id { get; set; }
    private DestinationDto Destination { get; set; }

    public DestinationForm()
    {
        id = string.Empty;
        Destination = new DestinationDto();
    }

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(id))
        {
            await LoadInitialValues(id);
        }
    }

    public async Task SubmitForm()
    {
        if (string.IsNullOrEmpty(id))
            await Add();
        else
            await Edit();
    }

    private async Task Add()
    {
        var response = await httpClient.PostAsJsonAsync("api/destinations", Destination);
        if (response.IsSuccessStatusCode)
        {
            await response.Content.ReadAsStringAsync();
            navigationManager.NavigateTo("/destinations");
        }
    }

    private async Task Edit()
    {
        var response = await httpClient.PutAsJsonAsync("api/destinations", Destination);
        if (response.IsSuccessStatusCode)
        {
            await response.Content.ReadAsStringAsync();
            navigationManager.NavigateTo("/destinations");
        }
    }

    private async Task LoadInitialValues(string id)
    {
        var response = await httpClient
        .GetFromJsonAsync<IEnumerable<DestinationDto>>($"api/destinations/{id}");

        Destination = response?.FirstOrDefault() ?? new DestinationDto();
    }
}
