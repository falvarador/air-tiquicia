@page "/roles"

@attribute [Authorize(Roles = "admin")]
@inject HttpClient httpClient
@inject IJSRuntime jsRuntime
@inject NavigationManager navigationManager

<section class="title-section">
    <h3>Roles</h3>
    <button class="btn btn-sm btn-success" @onclick="Add">Agregar nuevo</button>
</section>
<hr />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Roles.Any())
        {
            <text>No existen registros que mostrar.</text>
        }
        else 
        {
            @foreach (var role in Roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <span class="icon fa-solid fa-trash-can" aria-hidden="true"
                        @onclick=@(() => Delete(role.RoleId))></span>
                        <span class="icon fa-solid fa-pencil" aria-hidden="true"
                        @onclick=@(() => Edit(role.RoleId))></span>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    public Role()
    {
        Roles = new List<RoleDto>();
    }

    private IEnumerable<RoleDto> Roles { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadInitialValues();
    }

    private void Add()
    {
        navigationManager.NavigateTo($"/roles/add");
    }

    private void Edit(string id)
    {
        navigationManager.NavigateTo($"/roles/add/{id}");
    }

    private async Task Delete(string id)
    {
        if (!await jsRuntime.InvokeAsync<bool>("confirm",
        "Â¿Esta seguro que desea eliminar el rol?"))
            return;

        await httpClient.DeleteAsync($"api/roles/{id}");
        await LoadInitialValues();
    }

    private async Task LoadInitialValues()
    {
        Roles = await httpClient.GetFromJsonAsync<IEnumerable<RoleDto>>("api/roles")
        ?? Enumerable.Empty<RoleDto>();
    }
}
